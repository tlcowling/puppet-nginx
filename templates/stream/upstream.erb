upstream <%= @name %> {
  <%- @method = "" if @method == 'round-robin' -%>
  <%- components = [@method] + [@method_attribute] -%>
  <%- line = components.reject(&:empty?).join(" ") -%>
  <%- if line != '' -%>
  <%= line %>;
  <%- end -%>
  <%- address = @server.delete('address') -%>
  <%- options = @server.map{|k,v| "#{k}=#{v}" }.join(" ") -%>
  server <%= address %> <%= options || ''%>;
}